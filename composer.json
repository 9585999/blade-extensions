{
  "name": "radic/blade-extensions",
  "description": "Laravel package providing additional Blade extensions: foreach (with $loop data like twig), break, continue, set,array (multiline), etc",
  "homepage": "https://github.com/RobinRadic/blade-extensions",
  "keywords": [
    "loop",
    "extensions",
    "blade",
    "laravel",
    "theme",
    "template",
    "view"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Robin Radic",
      "email": "robin@radic.nl",
      "role": "Package Author/Developer"
    }
  ],
  "require": {
    "php": ">=5.4.0",
    "illuminate/support": "5.*"
  },
  "suggest": {
    "raveren/kent": ">0.9.1"
  },
  "require-dev": {
    "laravel/framework": "5.*@dev",
    "phpunit/phpunit": "*",
    "ncuesta/pinocchio": "dev-master"
  },
  "scripts": {
    "test": "phpunit",
    "livedoc": "grip --gfm --context=robinradic/blade-extensions"
  },
  "autoload": {
    "psr-0": {
      "Radic\\BladeExtensions": "src/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests"
    ]
  },
  "minimum-stability": "dev"
}
